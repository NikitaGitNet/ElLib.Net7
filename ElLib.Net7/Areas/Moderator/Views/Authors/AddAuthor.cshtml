@model Author
@{
    string strTitle = "Добавить автора";
    ViewBag.Title = strTitle;
}
<div>
    <form asp-area="Moderator" asp-controller="Authors" asp-action="AddAuthor" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id">
        <div asp-validation-summary="All"></div>
    <div class="inputBox">
        <h2>Имя, фамилия автора</h2>
        <input asp-for="Name">
        <span asp-validation-for="Name"></span>
    </div>
    <input type="submit" class="glo" value="Сохранить">
    </form>
</div>

